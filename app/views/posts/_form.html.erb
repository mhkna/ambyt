<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <p><%= pluralize(@post.errors.count, "error") %></p>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
    </div>
  <% end %>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
