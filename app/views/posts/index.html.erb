<h1>Listing posts</h1>
<%= @user_coords %>
<%= link_to 'New post', new_post_path %>

<div class="link row clearfix">
  <% @posts.each do |post| %>
    <h4>
      <div>
        (<%= post.latitude %>, <%= post.longitude %>)
      </div>
      <%= post.content %>
      <small class="author"><%= time_ago_in_words(post.created_at, include_seconds: true) %> by <%= post.user.name %></small>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post),
      method: :delete,
      data: { confirm: 'Are you sure?' } %>
    </h4>

    <div class="btn-group">
      <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= post.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
        Downvote
        <%= post.get_downvotes.size %>
      <% end %>
    </div>
  </div>

  <% end %>
